{
  "name": "mantenimiento-tactil",
  "version": "1.0.0",
  "author": "DTSoftware",
  "description": "Sistema de Gestion de Refacciones",
  "main": "main.js",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "electron": "electron .",
    "electron-dev": "concurrently \"npm run start\" \"wait-on http://localhost:4200 && cross-env NODE_ENV=development electron .\"",
    "electron-build": "ng build --configuration production",
    "build-electron": "ng build --configuration production",
    "dist": "npm run build-electron && electron-builder",
    "dist-win": "npm run build-electron && electron-builder --win",
    "dist-portable": "npm run build-electron && electron-builder --win portable",
    "dist-mac": "npm run build-electron && electron-builder --mac",
    "dist-linux": "npm run build-electron && electron-builder --linux",
    "dist-publish": "npm run build-electron && electron-builder --publish=always",
    "pack": "npm run build-electron && electron-builder --dir",
    "pack-win": "npm run build-electron && electron-builder --win --dir"
  },
  "prettier": {
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^20.1.0",
    "@angular/cdk": "^20.1.0",
    "@angular/common": "^20.1.0",
    "@angular/compiler": "^20.1.0",
    "@angular/core": "^20.1.0",
    "@angular/forms": "^20.1.0",
    "@angular/material": "^20.1.0",
    "@angular/platform-browser": "^20.1.0",
    "@angular/platform-browser-dynamic": "^20.1.0",
    "@angular/router": "^20.1.0",
    "dexie": "^4.0.11",
    "electron-updater": "^6.6.2",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "xlsx": "^0.18.5",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular/build": "^20.1.0",
    "@angular/cli": "^20.1.0",
    "@angular/compiler-cli": "^20.1.0",
    "@types/dexie": "^1.3.35",
    "@types/jasmine": "~5.1.0",
    "@types/node": "^24.0.13",
    "@types/xlsx": "^0.0.36",
    "autoprefixer": "^10.4.16",
    "concurrently": "^9.2.0",
    "cross-env": "^7.0.3",
    "electron": "^37.2.1",
    "electron-builder": "^26.0.12",
    "electron-reload": "^2.0.0-alpha.1",
    "jasmine-core": "~5.8.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "postcss": "^8.4.31",
    "tailwindcss": "^3.4.14",
    "typescript": "~5.8.2",
    "wait-on": "^8.0.3"
  },
  "build": {
    "appId": "com.empresa.mantenimiento-tactil",
    "productName": "Sistema de Gestion de Refacciones",
    "copyright": "Copyright (c) 2025 DTSoftware",
    "directories": {
      "output": "electron-dist"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "GDesasT",
        "repo": "mantenimiento-tactil",
        "private": false
      }
    ],
    "files": [
      "main.js",
      "preload.js",
      "dist/**/*",
      "node_modules/**/*",
      "package.json",
      "public/**/*"
    ],
    "extraResources": [
      {
        "from": "public",
        "to": "public"
      },
      {
        "from": "public/icon.ico",
        "to": "icon.ico"
      },
      {
        "from": "public/icon.png",
        "to": "icon.png"
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ],
      "icon": "public/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "portable": {
      "artifactName": "${productName}-${version}-portable.exe"
    },
    "mac": {
      "target": "dmg",
      "icon": "public/icon.icns",
      "category": "public.app-category.productivity"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "public/icon.png",
      "category": "Office"
    }
  }
}
